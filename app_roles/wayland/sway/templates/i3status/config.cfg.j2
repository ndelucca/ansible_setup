general {
    colors = true
    color_good = "#448575"
    color_degraded = "#f0d050"
    color_bad = "#ef3b3b"
    interval = 1
}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "cpu_usage"
order += "memory"
order += "volume master"
order += "tztime local"

wireless _first_ {
    format_up = "%quality WIFI"
    format_down = ""
}

ethernet _first_ {
    format_up = "ETH"
    format_down = ""
}

battery all {
    format = "%percentage %status"
    integer_battery_capacity = true
    low_threshold = 20
    format_down = ""
    status_chr = "CHR"
    status_bat = "BAT"
    status_full = "POW"
    status_unk = "???"
}

cpu_usage {
    format = "%usage CPU"
}

memory {
    format = "%used MEM"
}

volume master {
    format = "%volume VOL"
    format_muted = "%volume VOL"
}

tztime local {
    format = "%a %d %H:%M"
}
