{{ ansible_managed | comment }}

general {
    colors = true
    color_good = "{{ color_scheme.status_good }}"
    color_degraded = "{{ color_scheme.status_degraded }}"
    color_bad = "{{ color_scheme.status_bad }}"
    interval = 1
}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
{# order += "disk /" #}
order += "cpu_usage"
{# order += "load" #}
order += "memory"
order += "volume master"
order += "tztime local"

wireless _first_ {
    {# format_up = " (%quality) %ip" #}
    format_up = " %quality"
    format_down = ""
}

ethernet _first_ {
    {# format_up = " %ip" #}
    format_up = ""
    format_down = ""
}

battery all {
    format = "%status %percentage %remaining"
    integer_battery_capacity = true
    last_full_capacity = true
    low_threshold = 20
    format_down = ""
    status_chr = "⚡"
    status_bat = ""
    status_full = ""
    status_unk = "?"
}

disk "/" {
    format = " %percentage_used"
}

cpu_usage {
    format = " %usage"
}

load {
    format = " %1min"
}

memory {
    {# format = " %used" #}
    {# format_degraded = " %used" #}
    format = ""
    format_degraded = ""
    threshold_degraded = "10%"
    threshold_critical = 5%
}

volume master {
    format = " %volume"
    format_muted = " %volume"
}

tztime local {
    format = "%A %d %H:%M"
}

tztime arg {
    hide_if_equals_localtime = true
    format = "AR %A %d %H:%M"
    timezone = "America/Argentina/Buenos_Aires"
}
