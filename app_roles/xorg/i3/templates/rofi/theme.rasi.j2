* {
  c1: {{ color_scheme.rofi_borders }};
  c2: {{ color_scheme.rofi_background }};
  c3: {{ color_scheme.rofi_text_active }};
  c4: {{ color_scheme.rofi_text_default }};

  margin: 0;
  padding: 0;
  spacing: 0;

  text-color: @c2;
  background-color: transparent;
}

window {
    transparency: "real";
    location: center;
    anchor: center;
    fullscreen: false;
    width: 750px;
    x-offset: 0px;
    y-offset: 0px;

    margin:                      0px;
    padding:                     0px;
    border:                      2px solid;
    border-radius:               12px;
    border-color:                @c1;
    background-color:            @c2;
    cursor:                      "default";
}

inputbar {
    children: [ prompt, entry ];
    enabled:       true;
    spacing:       10px;
    margin:        0px;
    padding:       15px;
    border:        0px solid;
    border-radius: 10px;
    border-color:  @c1;
    text-color:    @c2;
}

prompt {
    enabled:          false;
    background-color: transparent;
    text-color:        @c3;
}

entry {
    enabled:           true;
    background-color:  transparent;
    text-color:        @c3;
    cursor:            text;
    placeholder:       "ï€‚ Search";
    placeholder-color: @c4;
}

message {
    border:           2px 0 0;
    border-color:     @c1;
    background-color: @c2;
}

textbox {
    background-color: transparent;
    text-color:       @c2;
    vertical-align:   0.5;
    horizontal-align: 0.02;
    highlight:        none;
}

listview {
    enabled:       true;
    columns:       1;
    lines:         8;
    cycle:         true;
    dynamic:       true;
    scrollbar:     false;
    reverse:       false;
    fixed-height:  true;
    fixed-columns: true;

    spacing:          0px;
    margin:           0px;
    padding:          0px;
    border:           0px solid;
    border-radius:    0px;
    border-color:     @c1;
    background-color: transparent;
    text-color:       @c2;
    cursor:           "default";
}

element {
    enabled:          true;
    spacing:          2px;
    margin:           0px;
    padding:          10px 10px;
    border:           0px solid;
    border-radius:    10px;
    border-color:     @c1;
    background-color: transparent;
    text-color:       @c4;
    cursor:           pointer;
}

element normal.normal {
    background-color: transparent;
    text-color: @c4;
}
element selected.normal {
    background-color: white / 5%;
    text-color: @c3;
}
element-icon {
    background-color: transparent;
    text-color: inherit;
    size: 24px;
    cursor: inherit;
}
element-text {
    background-color: transparent;
    text-color: inherit;
    highlight: inherit;
    cursor: inherit;
    vertical-align: 0.5;
    horizontal-align: 0.02;
}
